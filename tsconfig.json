{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/features/app/*": ["./src/features/app/*"],
      "@/features/slice-manager/*": ["./src/features/slice-manager/*"],
      "@/features/router/*": ["./src/features/router/*"],
      "@/features/i18n/*": ["./src/features/i18n/*"],
      "@/features/ui/*": ["./src/features/ui/*"],
      "@/features/wallet/*": ["./src/features/wallet/*"],
      "@/features/auth/*": ["./src/features/auth/*"],
      "@/features/blog-demo/*": ["./src/features/blog-demo/*"],
      "@/services/*": ["./src/services/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/store/*": ["./src/store/*"],
      "@/types/*": ["./src/types/*"],
      "@test-utils": ["./src/test-utils/index.ts"]
    },
    "types": ["vitest/globals", "vite"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
